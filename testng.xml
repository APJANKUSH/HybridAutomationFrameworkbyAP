<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="HybridAutomationFrameworkSuite" parallel="tests" thread-count="3">
<listeners>
		<listener class-name="framework.utils.Reporting" />
	</listeners>

    <!-- =================== UI TESTS =================== -->
  <test name="UI Tests">
    <classes>
      <class  name="tests.ui.LoginTest"/>
    </classes>
  </test>
  
  <!-- =================== API TESTS =================== -->
  <test name="API Tests">
    <classes>
      <class  name="tests.api.UserApiTest"/>
    </classes>
  </test>
  
   <!-- =================== INTEGRATION TESTS =================== -->
  <test name="Integration Tests">
    <classes>
      <class  name="tests.integration.EndToEndUserFlowTest"/>
    </classes>
  </test>
</suite>
